{
  "version": 3,
  "name": "My lovely gateway",
  "port": 8080,
  "cache_ttl": "3600s",
  "timeout": "3s",
  "extra_config": {
    "telemetry/logging": {
      "level": "DEBUG",
      "prefix": "[KRAKEND]",
      "syslog": false,
      "stdout": true
    },
    "telemetry/metrics": {
      "collection_time": "60s",
      "proxy_disabled": false,
      "router_disabled": false,
      "backend_disabled": false,
      "endpoint_disabled": false,
      "listen_address": ":8090"
    },
    "security/cors": {
      "allow_origins": [
        "http://192.168.99.100:3000",
        "http://localhost:3000"
      ],
      "allow_methods": [
        "POST",
        "GET"
      ],
      "allow_headers": [
        "Origin",
        "Authorization",
        "Content-Type"
      ],
      "expose_headers": [
        "Content-Length"
      ],
      "max_age": "12h"
    }
  },
  "endpoints": [
    {
      "endpoint": "/users",
      "method": "GET",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/users",
          "encoding": "json",
          "sd": "static",
          "method": "GET",
          "host": [
            "10.245.29.33"
          ],
          "disable_host_sanitize": false
        }
      ],
      "input_query_strings": []
    },
    {
      "endpoint": "/CraeteRecipe",
      "method": "POST",
      "output_encoding": "json",
      "extra_config": {
        "auth/validator": {
            "alg": "HS256",
            "jwk_url": "https://www.jsonkeeper.com/b/3LO1",
            "cache": true
         }
       },
      "backend": [
        {
          "url_pattern": "/CraeteRecipe",
          "encoding": "json",
          "sd": "static",
          "method": "POST",
          "host": [
            "10.245.115.102"
          ],
          "disable_host_sanitize": false
        }
      ]
    },
    {
      "endpoint": "/Recipies",
      "method": "GET",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/Recipies",
          "encoding": "json",
          "sd": "static",
          "method": "GET",
          "host": [
            "10.245.115.102"
          ],
          "disable_host_sanitize": false
        }
      ]
    },
    {
      "endpoint": "/SingleRecipe/{id}",
      "method": "GET",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/{id}",
          "encoding": "json",
          "method": "GET",
          "host": [
            "10.245.115.102"
          ],
          "disable_host_sanitize": false
        }
      ],
      "input_query_strings": [
        "id"
      ]
    },
    {
      "endpoint": "/register",
      "method": "POST",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/register",
          "encoding": "json",
          "sd": "static",
          "method": "POST",
          "host": [
            "10.245.29.33"
          ],
          "disable_host_sanitize": false
        }
      ]
    },
    {
      "endpoint": "/login",
      "method": "POST",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/login",
          "encoding": "json",
          "sd": "static",
          "method": "POST",
          "host": [
            "10.245.29.33"
          ],
          "disable_host_sanitize": false
        }
      ]
    }
  ]
}
